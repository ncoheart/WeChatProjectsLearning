.top-group {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #00B51D;
}

.search-group {
    width: 100%;
    height: 70rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    background-color: rgba(0, 0, 0, .3);
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.search-group .placeholder-input {
    font-size: 28rpx;
    color: rgba(255, 255, 255, .3);
}

.search-group .search-icon {
    flex-basis: 40rpx;
}

.search-group .clear-icon {
    flex-basis: 40rpx;
}

.search-group .search-input {
    font-size: 28rpx;
    color: #fff;
    flex: 1;
    box-sizing: border-box; 
    padding: 0 10rpx;
}